<div class="title">
<h1>Welcome to HaBike</h1>
<h3>The place to find your next ride</h3>
</div>
<div class="container">
  <% @bikes.each do |bike| %>
    <div class="bike-card">
      <img src="<%= image_url('bike.jpg') %>" class="bike-image">
      <div class="bike-details">
        <h3><%= bike.model %></h3>
        <p><%= bike.year %> &middot; <%= bike.kilometers %> km &middot; <%= bike.category %></p>
        <div class="bike-price">
          <p class="price">Precio contado</p>
          <p class="price-amount">$<%= bike.price %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
