<h2>Add a new review</h2>
<%= simple_form_for([bike, Review.new]) do |f| %>
  <div class="form-group">
    <%= f.input :rating, as: :select, collection: 1..5, prompt: "Select a rating" %>
  </div>
  <div class="form-group">
    <%= f.input :comment, label: "Your comment" %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :bike_id, value: bike.id %>
    <%= f.hidden_field :buyer_id, value: current_user.id %>
    <%= f.hidden_field :seller_id, value: bike.user.id %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit Review", class: "btn btn-primary" %>
  </div>
<% end %>
