<div class="container mt-3 w-100">
  <div class="row w-100">
    <div class="row full-height">
      <div class="container p-3 mb-2 mt- border-bottom border-dark-gray">
        <div class="col justify-content-end">
          <%= link_to "Back", bikes_path, class: "btn btn-primary btn-lg backLink-show" %>
        </div>
      </div>
      <div class="row text-center mt-3 mb-4"><h1>Reviews for <%= @bike.user.email %></h1></div>
      <div class="row w-100 text-center">
        <div class="col-6">
          <% if current_user %>
            <%= render partial: "new_review", locals: { bike: @bike, current_user: current_user } %>
          <% end %>
        </div>
        <div class="col-6">

          <%= render "reviews_list", reviews: @reviews %>
        </div>
      </div>

    </div>

  </div>
</div>
