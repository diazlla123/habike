<h1><%= current_user.email %></h1>
<%= link_to "Go back", bikes_path %>

<h2>Posted Bikes</h2>
<div class="container">
  <% @bikes.each do |bike| %>
      <%= link_to bike_path(bike) do %>
      <div class="bike-card">
        <% if bike.photo.attached? %>
          <%= cl_image_tag bike.photo.key, class: "bike-image" %>
        <% else %>
          <%= image_tag "bike.jpg", class: "bike-image" %>
        <% end %>
        <div class="bike-details">
          <h3><%= bike.model %></h3>
          <p><%= bike.year %> &middot; <%= bike.kilometers %> km &middot; <%= bike.category %></p>
          <div class="bike-price">
            <p class="price">Precio contado</p>
            <p class="price-amount">$<%= bike.price %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>

<h2>Purchased Bikes</h2>
<div class="container">
  <% @bikes_purchased.each do |bike| %>
      <%= link_to bike_path(bike) do %>
      <div class="bike-card">
        <% if bike.photo.attached? %>
          <%= cl_image_tag bike.photo.key, class: "bike-image" %>
        <% else %>
          <%= image_tag "bike.jpg", class: "bike-image" %>
        <% end %>
        <div class="bike-details">
          <h3><%= bike.model %></h3>
          <p><%= bike.year %> &middot; <%= bike.kilometers %> km &middot; <%= bike.category %></p>
          <div class="bike-price">
            <p class="price">Precio contado</p>
            <p class="price-amount">$<%= bike.price %></p>
          </div>
        </div>
        <div>
          <%= simple_form_for [bike] do |f| %>
            <%= f.hidden_field :buyer_id, value: "" %>
            <%= f.submit "Delete", class: "btn btn-danger" %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
