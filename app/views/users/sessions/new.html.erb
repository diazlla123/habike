<section class="section__logIn">
  <h2 class="h2-logIn">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-input-logIn">
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "input-logIn" }%>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "input-logIn" }%>
      </div>

      <div class="form-actions">
        <%= f.input :remember_me, as: :boolean, class: "remember-logIn" if devise_mapping.rememberable? %>
        <%= f.button :submit, "Log in", class: "btn btn-primary button-logIn" %>
      </div>

    </div>
  <% end %>
  
  <div class="linksLogSign" style="display: flex; gap: 5px;">
    <%= render "users/shared/links" %>
  </div>
</section>
